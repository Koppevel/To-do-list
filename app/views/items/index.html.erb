<p id="notice"><%= notice %></p>

<h1>Мои задачи</h1>

<table>
  <thead>
    <tr>
      <th>Задача</th>
      <th>Выполнено</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= link_to 'Выполнить', complete_item_path(item), method: :post %></td>
        <td><%= link_to 'Подробнее', item %></td>
        <td><%= link_to 'Добавить', edit_item_path(item) %></td>
      </tr>
    <% end %>
  <tr><td>-------------- Выполненные дела снизу --------------</td></tr>
    <% @completed_items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.completed_at %></td>
      <td><%= link_to 'Подробнее', item %></td>
      <td><%= link_to 'Добавить', edit_item_path(item) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

